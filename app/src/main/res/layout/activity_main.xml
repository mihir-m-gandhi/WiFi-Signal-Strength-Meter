<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">


    <Button
        android:id="@+id/scanButton"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="getWifiList"
        android:text="Scan"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <ListView
        android:id="@+id/wifiList"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="250dp"
        android:background="#cfead9"
        android:layout_below="@id/scanButton">

    </ListView>


    <Button
        android:id="@+id/infoButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/wifiList"
        android:background="@color/colorPrimary"
        android:onClick="getWifiInfo"
        android:textColor="#FFFFFF"
        android:text="Get Info" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/wifiList"
        android:layout_toRightOf="@id/infoButton"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:background="@color/colorPrimary"
        android:onClick="stopInfo"
        android:textColor="#FFFFFF"
        android:text="Stop" />

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="#cfead9"
            android:textSize="16sp"
            android:paddingLeft="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/infoButton"
            android:text="Information will appear here..." />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/info"
        android:onClick="save"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:text="Save" />

    <TextView
        android:id="@+id/infoFromFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:background="#cfead9"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_below="@id/saveButton"
        android:layout_centerHorizontal="true"
        android:text="Saved files will be shown here..." />

    <Button
        android:id="@+id/loadButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/infoFromFile"
        android:onClick="load"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:text="Load"/>

    <TextView
        android:id="@+id/appInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:textSize="14sp"
        android:layout_below="@id/loadButton"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="App by Mihir Gandhi \nEmail: mihir.mg@somaiya.edu" />

</RelativeLayout>

</ScrollView>